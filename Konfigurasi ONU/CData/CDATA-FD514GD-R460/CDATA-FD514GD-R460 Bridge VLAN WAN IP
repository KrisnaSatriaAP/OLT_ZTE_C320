#bridge vlan 10
#wan ip 10.9.52.4 via vlan 10
#profile tcont 1000M
#bridge port lan 1 saja
#type onu CDATA-FD514GD-R460

conf t
interface gpon-olt_1/1/1
onu 1 type CDATA-FD514GD-R460 sn ZTEG1D092427
exit

interface gpon-onu_1/1/1:1
name ONU1
description ONU1
tcont 1 name BRIDGE profile 1000M
gemport 1 name BRIDGE tcont 1
service-port 1 vport 1 user-vlan 10 vlan 10
exit

pon-onu-mng gpon-onu_1/1/1:1
service BRIDGE gemport 1 cos 0 vlan 10
wan-ip 1 mode static ip-profile static-test ip-address 10.9.52.4 mask 255.255.255.0 vlan-profile vlan10 host 1
ip-host 1 ip 10.9.52.4 mask 255.255.255.0
vlan port eth_0/1 mode hybrid def-vlan 10
wan 1 service internet
